<%= render("layouts/navbar") %>
<%= stylesheet_link_tag "form" %>
<div class="page">
  <div class="form">
    <h1>Login</h1>
    <%= form_with url: login_path, scope: :user do |form| %>
      <div>
        <%= form.label :email %>
        <%= form.email_field :email, required: true, placeholder: "Enter Email" %>
      </div>
      <div>
        <%= form.label :password %>
        <%= form.password_field :password, required: true, placeholder: "Enter Password" %>
      </div>
      <div style="white-space: nowrap;">
        <%= form.label :remember_me %>
        <%= form.check_box :remember_me %>
      </div>
      <%= form.submit "Sign In" %>
      <div>
        <%= link_to "Reset password", '/password_rest', method: :get%>
      </div>
      <p class="message">Not registered? <a href="/sign_up">Create an account</a></p>
    <% end %>
  </div>
</div>